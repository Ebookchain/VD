<h2 class="title">Create Tasks</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal">
        <div class="form-group">
            <label for="inputName" class="col-sm-2 control-label">{{t 'task.name'}}</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" placeholder="{{t 'task.name'}}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputDesc" class="col-sm-2 control-label">{{t 'task.description'}}</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="inputDesc" placeholder="{{t 'task.description'}}">
            </div>
        </div>
        <div class="form-group">
            <label for="inputContent" class="col-sm-2 control-label">{{t 'task.content'}}</label>
            <div class="col-sm-10">
            {{textarea class="form-control" id="inputContent" placeholder=(t 'task.content') }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                <input type="checkbox"> Remember me
                </label>
            </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Sign in</button>
            </div>
        </div>
        </form>
    </div>
    
    <div class="col-md-6">.col-md-6</div>
</div>